$shm_hitalama_drag $mol_plugin
	x? 0
	y? 0
	repos_x* 1
	repos_y* 1
	-
	on_drag? null
	on_drag_start? null
	on_drag_end? null
	-
	drag? null
	drag_start? null
	drag_end? null
	-
	use_buttons /
		0 - \left
		-\ 1 - \right
		-\ 2 - \middle
	event *
		^
		pointerdown? <=> pointerdown? null
	attr *
		^
		shm_hitalama_dragged <= dragged? false
	-
	drags_synced /$shm_hitalama_drag
