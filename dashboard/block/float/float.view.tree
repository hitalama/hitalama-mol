$shm_hitalama_dashboard_block_float $shm_hitalama_resize
	block $shm_hitalama_dashboard_block
	sub /
		<= Head $mol_view
			sub /
				<= Opacity $mol_number
					precision 0.1
					value_min 0.1
					value_max 1.0
					value? <=> opacity? 1
				<= Cut $mol_button_minor
					click? <=> cut? null
					sub /
						<= Cut_icon $mol_icon_close
		<= Drag
		^ edges
	drag_body /
		<= Content $mol_text
			text <= content \
	style *
		^
		opacity <= opacity_str \1
